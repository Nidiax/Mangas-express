@page
@model MangaExpressController.Areas.Identity.Pages.AdminP.UsuariosP.DeleteModel
@{
    Layout = "_LayoutAdmin";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>

    <h3>¿Estas seguro de eliminar el usuario?</h3>
    <div>
        <h4>Usuario</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Usuario.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Usuario.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Usuario.EmailConfirmed)
            </dt>
            
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Usuario.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
</body>
</html>

