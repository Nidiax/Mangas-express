@page
@model MangaExpressController.Areas.Identity.Pages.AdminP.UsuariosP.IndexModel
@{
    Layout = "_LayoutAdmin";
}


<div class="float-right mb-3">
    <a asp-page="Create" class="btn btn-primary">Crear un usuario</a>

</div>

<table class="table table-hover">
    <thead class="table-info">
        <tr>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Opciones</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model.Usuario)
        {
        <tr>
            <td>@usuario.UserName</td>
            <td>@usuario.Email</td>
            


            <td>
                <a class="btn btn-sm btn-primary details" asp-page="./Edit" asp-route-id="@usuario.Id">Edit</a> |
                <a class="btn btn-sm btn-danger" asp-page="./Delete" asp-route-id="@usuario.Id">Delete</a>
            </td>
        </tr>
        }

    </tbody>

</table>
