@page
@model MangaExpressController.Areas.Identity.Pages.AdminP.MangasP.EditModel

@{
    Layout = "_LayoutAdmin";
}

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="MangaM.Id" />
    <div style="text-align:center;" class="m-2">
        <img src="@(string.IsNullOrEmpty(Model.MangaM.Imagen)? Url.Content($"~/images/NoImage.png") :Url.Content($"~/images/{Model.MangaM.Imagen}"))" alt="Alternate Text" id="preview" width="200" />
    </div>
    <div class="row">
        <div class="form-group col-md-10" style="text-align:center;">
            <label asp-for="Imagen" class="custom-file-label"></label>
            <input asp-for="Imagen" class="custom-file-input form-control" type="file" accept="image/png, image/gif, image/jpeg" />
            <span asp-validation-for="Imagen" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="MangaM.Nombre" class="control-label"></label>
                <input asp-for="MangaM.Nombre" class="form-control" />
                <span asp-validation-for="MangaM.Nombre" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="MangaM.Precio" class="control-label"></label>
                <input asp-for="MangaM.Precio" class="form-control" type="number" />
                <span asp-validation-for="MangaM.Precio" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="MangaM.Autor" class="control-label"></label>
                <input asp-for="MangaM.Autor" class="form-control" />
                <span asp-validation-for="MangaM.Autor" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="MangaM.Marca" class="control-label"></label>
                <input asp-for="MangaM.Marca" class="form-control" />
                <span asp-validation-for="MangaM.Marca" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="MangaM.Descripcion" class="control-label"></label>
                <textarea asp-for="MangaM.Descripcion" class="form-control"></textarea>
                <span asp-validation-for="MangaM.Descripcion" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

@section scripts {
    <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", () => {
            var fileInput = document.getElementsByClassName('custom-file-input')[0]
            var fileInputLabel = document.getElementsByClassName('custom-file-label')[0]
            var imagePreview = document.getElementById('preview')
            var reader = new FileReader()
            fileInputLabel.innerHTML ="@Model.MangaM.Imagen"
            fileInput.addEventListener('change', (event) => {
                var fileName = fileInput.value.split("\\").pop()
                fileInputLabel.innerHTML = fileName
                reader.readAsDataURL(event.target.files[0])
                reader.onloadend = function (event) {
                    imagePreview.src = reader.result
                    imagePreview.hidden = false


                }

            })

        });
    </script>
}

