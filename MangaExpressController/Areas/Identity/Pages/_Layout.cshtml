@using Microsoft.AspNetCore.Identity
@using Manga.Models;
@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager
@{ 

}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MangaExpressController</title>
    <p style="color: red;"><b>Esta pagina es de uso educativo y no comercial</b></p>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/mangasLayout.css" />
    
</head>
<body>
    <header>
        <nav id="bg" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg border-bottom box-shadow mb-4">
            <div class="container">
                @if (User.Identity.IsAuthenticated)
                {
                <a class="navbar-brand" asp-area="Identity" asp-page="/CarritoUsuarioP/IndexM"><img src="~/images/Anya.png" width="70" height="70" /><img src="~/images/logo.png" width="190" height="70" alt="MangasExpress Logo" /></a> }
                else
                {
            <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="~/images/Anya.png" width="70" height="70" /><img src="~/images/logo.png" width="190" height="70" alt="MangasExpress Logo" /></a>}

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    
                    <partial name="_LoginPartial" />
                    <form class="form-inline my-2 my-lg-0 d-flex ml-2">
                       <input class="form-control mr-sm-2" type="search" name="searchBy"  placeholder="Search" aria-label="Search">
                        <button type="submit" class="btn btn-outline-primary my-2 my-0">Buscar</button>
                    </form>
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h4>Atención al Cliente</h4>
                    <p>¿Necesitas ayuda?</p>
                    <p>Contáctanos</p>
                    <p>Tel: +52 999 251 9486</p>
                    <p>Tel: +52 999 645 9799</p>
                    <p style="color: red;"><b>Esta pagina es de uso educativo y no comercial</b></p>
                </div>
                <div class="col-md-6">
                    <h3>Redes sociales:</h3>
                    <i class="fab fa-facebook fa-2x"></i>
                    <i class="fab fa-twitter fa-2x"></i>
                    <p style="color: red;"><b>Esta pagina es de uso educativo y no comercial</b></p>
                </div>
            </div>

        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.all.js" integrity="sha256-PZopa1wHe4oeNzNoNggQKQDmuHlq4DrjbQ16ZRJt/64=" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
