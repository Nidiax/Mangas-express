@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/css/registro.css" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MangaExpressController</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg border-bottom box-shadow mb-4">
        <div class="container">
            @if (User.Identity.IsAuthenticated)
            {
                <a class="navbar-brand" asp-area="Identity" asp-page="/CarritoUsuarioP/IndexM"><img src="~/images/Anya.png" width="70" height="70" /><img src="~/images/logo.png" width="190" height="70" alt="MangasExpress Logo" /></a> }
            else
            {
                <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="~/images/Anya.png" width="70" height="70" /><img src="~/images/logo.png" width="190" height="70" alt="MangasExpress Logo" /></a>}

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">



                <ul class="navbar-nav flex-grow-1">
                </ul>
            </div>

        </div>
    </nav>
</header>
<h1>@ViewData["Title"]</h1>
<div class="registre">
    <div class="registre-card">
        <div class="card-title">
            <h1>Crea un nueva cuenta</h1>
        </div>
        <div class="content">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div>
                    <label asp-for="Input.UserName"></label>
                    <input asp-for="Input.UserName" id="nombre" placeholder="Escriba su usuario" class="form-control" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" id="email" placeholder="Escriba su correo electrónico" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" id="password" placeholder="Escriba una contraseña" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" id="confirmpass" placeholder="Confirme esa contraseña" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" id="btn-registre" class="btn btn-primary">Registrarse</button>
                <br />
                <div class="form-group">
                    <p>
                        ¿Ya tienes una cuenta?
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Inicia Sesión</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.all.js" integrity="sha256-PZopa1wHe4oeNzNoNggQKQDmuHlq4DrjbQ16ZRJt/64=" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
